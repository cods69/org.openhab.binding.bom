<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="bom" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="weather">
		<label>BOM</label>
		<description>Australian Bureau of Meteorology Binding</description>

		<channel-groups>
			<channel-group id="day1" typeId="day1Group" />
			<channel-group id="day2" typeId="day2Group" />
			<channel-group id="day3" typeId="day3Group" />
			<channel-group id="day4" typeId="day4Group" />
			<channel-group id="day5" typeId="day5Group" />
			<channel-group id="day6" typeId="day6Group" />
			<channel-group id="day7" typeId="day7Group" />
			<channel-group id="day8" typeId="day8Group" />
		</channel-groups>

		<config-description>
			<parameter name="observationFtpPath" type="text" required="true">
				<label>Observation FTP path</label>
				<description>FTP path to observation data. e.g ftp://ftp.bom.gov.au/anon/gen/fwo/IDW60920.xml</description>
			</parameter>
			<parameter name="weatherStationId" type="text" required="true">
				<label>Weather station ID</label>
				<description>The weather station ID (wom-id attribute). e.g 94608</description>
			</parameter>
			<parameter name="forecastFtpPath" type="text" required="true">
				<label>Forecast FTP path</label>
				<description>FTP path to forecast data. e.g ftp://ftp.bom.gov.au/anon/gen/fwo/IDW12300.xml</description>
			</parameter>
			<parameter name="areaId" type="text" required="true">
				<label>Area ID</label>
				<description>The area ID (aac attribute). e.g WA_PT053</description>
			</parameter>
			<parameter name="observationRefreshInterval" type="integer">
				<label>Observation refresh interval in minutes</label>
				<description>Refresh interval of observation data. Default is 15 minutes.</description>
				<default>15</default>
				<required>false</required>
			</parameter>
			<parameter name="forecastRefreshInterval" type="integer">
				<label>Forecast refresh interval</label>
				<description>Refresh interval of forecast data. Default is 30 minutes.</description>
				<default>30</default>
				<required>false</required>
			</parameter>
		</config-description>

	</thing-type>

